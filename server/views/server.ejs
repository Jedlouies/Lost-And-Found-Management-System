


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard</title>

    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
        rel="stylesheet"
    />

    <style>
        body {
            background: #f5f7fa;
            font-family: Arial, sans-serif;
        }

        .dashboard-container {
            max-width: 1100px;
            margin: auto;
            padding-top: 40px;
        }

        .table thead {
            background: #343a40;
            color: white;
        }

        .btn-delete {
            background: #d9534f;
            color: white;
        }

        .btn-delete:hover {
            background: #c9302c;
        }

        .card {
            border-radius: 10px;
        }

        .header-title {
            text-align: center;
            margin-bottom: 25px;
        }
    </style>
</head>

<body>
    <div class="dashboard-container">

        <h2 class="header-title">Admin Dashboard</h2>

        <div class="text-end mb-3">
            <a href="/logout" class="btn btn-outline-secondary">Logout</a>
        </div>

        <div class="card p-4 mb-4 shadow-sm">
            <h4>Registered Admins</h4>
            <div class="table-responsive mt-3">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Contact Number</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <%- adminsTable %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card p-4 shadow-sm">
            <h4>Create Admin</h4>

            <form method="POST" action="/server/create-admin" class="mt-3">
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="text" name="studentId" class="form-control" placeholder="Enter Employee ID" required />
                    </div>
                    <div class="col-md-4">
                        <input type="email" name="email" class="form-control" placeholder="Enter Email" required />
                    </div>
                    <div class="col-md-4">
                        <input type="password" name="password" class="form-control" placeholder="Enter Password" required />
                    </div>
                </div>

                <button class="btn btn-primary mt-3">Create Admin</button>
            </form>
        </div>

    </div>
</body>
</html>
