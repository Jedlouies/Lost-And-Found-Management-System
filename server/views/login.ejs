<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>SpotSync Admin Login</title>

    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
        rel="stylesheet"
    />

    <style>
        body {
            background: #eef2f7;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: Arial, sans-serif;
        }

        .login-card {
            width: 380px;
            padding: 30px;
            border-radius: 12px;
            background: white;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .title {
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
            color: #333;
        }

        .btn-login {
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="login-card">
        <h3 class="title">SpotSync Admin Login</h3>

        <% if (typeof error !== "undefined") { %>
            <div class="alert alert-danger text-center">
                <%= error %>
            </div>
        <% } %>

        <form method="POST" action="/login">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input 
                    type="text" 
                    name="username" 
                    class="form-control" 
                    placeholder="Enter username"
                    required
                />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    class="form-control" 
                    placeholder="Enter password"
                    required
                />
            </div>

            <button class="btn btn-primary btn-login">Login</button>
        </form>
    </div>
</body>
</html>
